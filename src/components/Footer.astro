<style>
	footer {
		height: 128px;
		padding: 1.2rem;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		gap: 1.1rem;
		box-sizing: border-box;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
		font-size: 0.95rem;
	}
	.footer-text {
		line-height: 1.2;
	}
	.footer-social {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.85rem;
		width: 100%;
	}
	.social-link {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		border-radius: 999px;
		color: rgb(var(--gray));
		border: 1px solid rgba(var(--gray), 0.2);
		text-decoration: none;
		transition: color 160ms ease, border-color 160ms ease, background-color 160ms ease, transform 160ms ease, box-shadow 160ms ease;
	}
	.social-link svg {
		width: 18px;
		height: 18px;
		fill: currentColor;
	}
	.social-link:hover,
	.social-link:focus-visible {
		color: var(--accent);
		border-color: rgba(var(--gray), 0.35);
		background: rgba(var(--gray-light), 0.5);
		transform: translateY(-1px) scale(1.04);
		box-shadow: 0 4px 10px rgba(var(--gray), 0.18);
	}
</style>
