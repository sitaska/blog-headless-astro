---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getFeaturedMediaMap, getPosts, stripHtml } from '../lib/wp';

const posts = await getPosts();
const mediaMap = await getFeaturedMediaMap(posts.map((post) => post.featured_media));

function truncateText(value: string, maxLength = 130) {
	if (value.length <= maxLength) {
		return value;
	}
	return `${value.slice(0, maxLength).trimEnd()}â€¦`;
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				list-style: none;
				padding: 0;
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				gap: 1.25rem;
				align-items: start;
			}
			li {
				border: 1px solid rgb(var(--gray-light));
				border-radius: 12px;
				padding: 0.9rem;
			}
			li img {
				width: 100%;
				aspect-ratio: 16 / 9;
				object-fit: cover;
				border-radius: 8px;
				margin-bottom: 0.6rem;
			}
			h2 {
				font-size: 1.2rem;
				line-height: 1.3;
				margin-bottom: 0.2rem;
			}
			time {
				color: rgb(var(--gray));
				font-size: 0.88rem;
			}
			li p {
				margin-top: 0.45rem;
				margin-bottom: 0;
				font-size: 0.95rem;
				line-height: 1.5;
			}
			@media (max-width: 900px) {
				ul {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Blog de las Cositas de Sita</h1>
			{posts.length === 0 ? (
				<p>No se pudieron cargar posts desde WordPress. Revisa PUBLIC_WP_API_BASE.</p>
			) : (
				<ul>
					{posts.map((post) => {
						const media = mediaMap.get(post.featured_media);
						return (
							<li>
								<a href={`/${post.slug}/`}>
									{media?.source_url && <img src={media.source_url} alt={media.alt_text || ''} loading="lazy" />}
									<h2 set:html={post.title.rendered} />
								</a>
								<time datetime={post.date}>{new Date(post.date).toLocaleDateString('es-ES')}</time>
								<p>{truncateText(stripHtml(post.excerpt.rendered))}</p>
							</li>
						);
					})}
				</ul>
			)}
		</main>
		<Footer />
	</body>
</html>
