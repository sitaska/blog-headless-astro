---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCategories, getCategoryBadgeColors, getFeaturedMediaMap, getPosts, stripHtml, type WPCategory } from '../lib/wp';

const [posts, categories] = await Promise.all([getPosts(), getCategories()]);
const mediaMap = await getFeaturedMediaMap(posts.map((post) => post.featured_media));
const categoriesById = new Map(categories.map((category) => [category.id, category] as const));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 1120px;
			}
			h1 {
				text-align: center;
				margin-bottom: 1.7rem;
			}
			.category-pills {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 0.55rem;
				margin: 0 0 1.5rem;
			}
			.category-pill {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				cursor: pointer;
				font-family: inherit;
				font-style: inherit;
				padding: 0.5rem 0.95rem;
				border-radius: 999px;
				font-size: 0.83rem;
				font-weight: 600;
				line-height: 1.2;
				text-decoration: none;
				color: rgb(var(--gray-dark));
				background: #fff;
				border: 1px solid rgb(var(--gray-light));
				box-shadow: 0 1px 2px rgba(var(--gray), 12%);
				transition:
					background-color 160ms ease,
					color 160ms ease,
					border-color 160ms ease,
					box-shadow 160ms ease;
			}
			.category-pill.is-active {
				background: var(--accent);
				color: #fff;
				border-color: var(--accent);
				box-shadow: 0 2px 8px rgba(var(--gray), 22%);
			}
			.category-pill:hover,
			.category-pill:focus-visible {
				background: rgba(var(--gray-light), 45%);
				color: rgb(var(--black));
				border-color: var(--accent);
				box-shadow: 0 2px 8px rgba(var(--gray), 18%);
			}
			ul {
				list-style: none;
				padding: 0;
				display: grid;
				grid-template-columns: repeat(3, minmax(0, 1fr));
				gap: 1.25rem;
			}
			li {
				border: 1px solid rgb(var(--gray-light));
				border-radius: 12px;
				padding: 0.9rem;
				display: flex;
				flex-direction: column;
				height: auto;
				overflow: hidden;
				transition: opacity 200ms ease, transform 200ms ease;
			}
			li.is-hidden {
				opacity: 0;
				transform: translateY(8px);
				pointer-events: none;
			}
			li.is-entering {
				opacity: 0;
				transform: translateY(6px);
			}
			li img {
				width: 100%;
				aspect-ratio: 16 / 9;
				object-fit: cover;
				border-radius: 8px;
				margin-bottom: 0.9rem;
			}
			.card-main-link {
				display: flex;
				flex-direction: column;
				text-decoration: none;
				color: inherit;
			}
			.card-categories {
				display: flex;
				flex-wrap: wrap;
				gap: 0.35rem;
				margin-bottom: 0.45rem;
			}
			.category-tag {
				display: inline-block;
				padding: 0.14rem 0.5rem;
				border-radius: 999px;
				font-size: 0.75rem;
				font-weight: 600;
				line-height: 1.25;
				background: var(--tag-bg);
				color: var(--tag-text);
				border: 1px solid var(--tag-border);
				text-decoration: none;
				transition: filter 140ms ease;
			}
			.category-tag:hover,
			.category-tag:focus-visible {
				filter: brightness(0.96);
			}
			h2 {
				font-size: 1.2rem;
				line-height: 1.3;
				margin-bottom: 0.2rem;
				color: rgb(var(--black));
				transition: color 140ms ease;
			}
			.card-main-link:hover h2,
			.card-main-link:focus-visible h2 {
				color: var(--accent);
			}
			time {
				color: rgb(var(--gray));
				font-size: 0.88rem;
			}
			li p {
				margin-top: 0.45rem;
				margin-bottom: 0;
				font-size: 0.95rem;
				line-height: 1.5;
			}
			@media (max-width: 1150px) {
				ul {
					grid-template-columns: repeat(2, minmax(0, 1fr));
				}
			}
			@media (max-width: 900px) {
				.category-pills {
					display: none;
				}
				ul {
					grid-template-columns: 1fr;
					row-gap: 1.5rem;
				}
				li {
					padding: 1.05rem;
					height: auto;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Blog de las Cositas de Sita</h1>
			{categories.length > 0 && (
				<nav class="category-pills" aria-label="Categorías del blog">
					<button class="category-pill is-active" type="button" data-filter="all" aria-pressed="true">
						Todas
					</button>
					{categories
						.filter((category) => category.slug !== 'sin-categoria' && category.name.toLowerCase() !== 'sin categoria')
						.map((category) => (
							<button class="category-pill" type="button" data-filter={category.slug} aria-pressed="false">
								{category.name}
							</button>
						))}
				</nav>
			)}
			{posts.length === 0 ? (
				<p>No se pudieron cargar posts desde WordPress. Revisa PUBLIC_WP_API_BASE.</p>
			) : (
				<ul>
					{posts.map((post) => {
						const media = mediaMap.get(post.featured_media);
						const postTitle = stripHtml(post.title.rendered);
						const postCategories = post.categories
							.map((categoryId) => categoriesById.get(categoryId))
							.filter((category): category is WPCategory => Boolean(category));
						const postCategorySlugs = postCategories.map((category) => category.slug).join(' ');
						return (
							<li data-categories={postCategorySlugs}>
								<a class="card-main-link" href={`/${post.slug}/`}>
									{media?.source_url && <img src={media.source_url} alt={postTitle} loading="lazy" />}
								</a>
								{postCategories.length > 0 && (
									<div class="card-categories" aria-label="Categorías del post">
										{postCategories.map((category) => {
											const colors = getCategoryBadgeColors(category.id);
											return (
												<a
													class="category-tag"
													href={`/categorias/${category.slug}/`}
													style={`--tag-bg: ${colors.bg}; --tag-text: ${colors.text}; --tag-border: ${colors.border};`}
												>
													{category.name}
												</a>
											);
										})}
									</div>
								)}
								<a class="card-main-link" href={`/${post.slug}/`}>
									<h2 set:html={post.title.rendered} />
								</a>
								<time datetime={post.date}>{new Date(post.date).toLocaleDateString('es-ES')}</time>
								<p>{stripHtml(post.excerpt.rendered)}</p>
							</li>
						);
					})}
				</ul>
			)}
		</main>
		<script>
			const filterButtons = Array.from(document.querySelectorAll<HTMLButtonElement>('.category-pill'));
			const cards = Array.from(document.querySelectorAll<HTMLElement>('ul > li[data-categories]'));
			const fadeDuration = 200;
			const staggerStep = 40;

			const applyFilter = (filter: string) => {
				const visibleCards = [] as HTMLElement[];
				cards.forEach((card) => {
					const categories = (card.getAttribute('data-categories') || '').split(' ').filter(Boolean);
					const visible = filter === 'all' || categories.includes(filter);
					if (visible) {
						visibleCards.push(card);
					} else {
						card.classList.add('is-hidden');
						window.setTimeout(() => {
							card.style.display = 'none';
						}, fadeDuration);
					}
				});

				visibleCards.forEach((card, index) => {
					card.style.display = '';
					card.classList.add('is-entering');
					window.setTimeout(() => {
						card.classList.remove('is-hidden');
						card.classList.remove('is-entering');
					}, index * staggerStep);
				});

				filterButtons.forEach((button) => {
					const isActive = button.getAttribute('data-filter') === filter;
					button.classList.toggle('is-active', isActive);
					button.setAttribute('aria-pressed', String(isActive));
				});
			};

			filterButtons.forEach((button) => {
				button.addEventListener('click', () => {
					const filter = button.getAttribute('data-filter') || 'all';
					applyFilter(filter);
				});
			});
		</script>
		<Footer />
	</body>
</html>
