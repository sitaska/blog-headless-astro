---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import {
	getCategories,
	getCategoryBadgeColors,
	getFeaturedMediaMap,
	getPosts,
	stripHtml,
	type WPCategory,
} from '../../lib/wp';

type Props = {
	categoryId: number;
	categoryName: string;
};

export async function getStaticPaths() {
	const categories = await getCategories();

	return categories.map((category) => ({
		params: { slug: category.slug },
		props: {
			categoryId: category.id,
			categoryName: category.name,
			categorySlug: category.slug,
		},
	}));
}

const { categoryId, categoryName } = Astro.props as Props;
const posts = (await getPosts()).filter((post) => post.categories.includes(categoryId));
const mediaMap = await getFeaturedMediaMap(posts.map((post) => post.featured_media));
const categories = await getCategories();
const categoriesById = new Map(categories.map((category) => [category.id, category] as const));
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={`${categoryName} | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 1120px;
			}
			h1 {
				text-align: center;
				margin-bottom: 1.7rem;
			}
			.back-link-wrap {
				display: flex;
				justify-content: center;
				margin: 0.2rem 0 1.1rem;
			}
			.back-link-btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				padding: 0.48rem 0.9rem;
				border-radius: 999px;
				font-size: 0.9rem;
				font-weight: 600;
				text-decoration: none;
				color: var(--accent);
				background: rgba(35, 55, 255, 0.08);
				border: 1px solid rgba(35, 55, 255, 0.22);
				transition: background-color 140ms ease, color 140ms ease, border-color 140ms ease;
			}
			.back-link-btn:hover,
			.back-link-btn:focus-visible {
				background: var(--accent);
				color: #fff;
				border-color: var(--accent);
			}
			ul {
				list-style: none;
				padding: 0;
				display: grid;
				grid-template-columns: repeat(3, minmax(0, 1fr));
				gap: 1.25rem;
			}
			li {
				border: 1px solid rgb(var(--gray-light));
				border-radius: 12px;
				background: #fff;
				box-shadow: 0 6px 18px rgba(var(--black), 0.06);
				padding: 0.9rem;
				display: flex;
				flex-direction: column;
				height: auto;
				overflow: hidden;
			}
			li img {
				width: 100%;
				aspect-ratio: 16 / 9;
				object-fit: cover;
				border-radius: 8px;
				margin-bottom: 0.9rem;
			}
			.card-main-link {
				display: flex;
				flex-direction: column;
				text-decoration: none;
				color: inherit;
			}
			.card-categories {
				display: flex;
				flex-wrap: wrap;
				gap: 0.35rem;
				margin-bottom: 0.45rem;
			}
			.category-tag {
				display: inline-block;
				padding: 0.14rem 0.5rem;
				border-radius: 999px;
				font-size: 0.75rem;
				font-weight: 600;
				line-height: 1.25;
				background: var(--tag-bg);
				color: var(--tag-text);
				border: 1px solid var(--tag-border);
				text-decoration: none;
				transition: filter 140ms ease;
			}
			.category-tag:hover,
			.category-tag:focus-visible {
				filter: brightness(0.96);
			}
			h2 {
				font-size: 1.2rem;
				line-height: 1.3;
				margin-bottom: 0.2rem;
				color: rgb(var(--black));
				transition: color 140ms ease;
			}
			.card-main-link:hover h2,
			.card-main-link:focus-visible h2 {
				color: var(--accent);
			}
			time {
				color: rgb(var(--gray));
				font-size: 0.88rem;
			}
			li p {
				margin-top: 0.45rem;
				margin-bottom: 0;
				font-size: 0.95rem;
				line-height: 1.5;
			}
			@media (max-width: 1150px) {
				ul {
					grid-template-columns: repeat(2, minmax(0, 1fr));
				}
			}
			@media (max-width: 900px) {
				ul {
					grid-template-columns: 1fr;
					row-gap: 1.5rem;
				}
				li {
					padding: 1.05rem;
					height: auto;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Categoría: {categoryName}</h1>
			<div class="back-link-wrap">
				<a class="back-link-btn" href="/categorias/">← Volver a categorías</a>
			</div>
			{posts.length === 0 ? (
				<p>No hay entradas en esta categoría.</p>
			) : (
				<ul>
					{posts.map((post) => {
						const media = mediaMap.get(post.featured_media);
						const postTitle = stripHtml(post.title.rendered);
						const postCategories = post.categories
							.map((postCategoryId) => categoriesById.get(postCategoryId))
							.filter((category): category is WPCategory => Boolean(category));
						return (
							<li>
								<a class="card-main-link" href={`/${post.slug}/`}>
									{media?.source_url && <img src={media.source_url} alt={postTitle} loading="lazy" />}
								</a>
								{postCategories.length > 0 && (
									<div class="card-categories" aria-label="Categorías del post">
										{postCategories.map((category) => {
											const colors = getCategoryBadgeColors(category.id);
											return (
												<a
													class="category-tag"
													href={`/categorias/${category.slug}/`}
													style={`--tag-bg: ${colors.bg}; --tag-text: ${colors.text}; --tag-border: ${colors.border};`}
												>
													{category.name}
												</a>
											);
										})}
									</div>
								)}
								<a class="card-main-link" href={`/${post.slug}/`}>
									<h2 set:html={post.title.rendered} />
								</a>
								<time datetime={post.date}>{new Date(post.date).toLocaleDateString('es-ES')}</time>
								<p>{stripHtml(post.excerpt.rendered)}</p>
							</li>
						);
					})}
				</ul>
			)}
		</main>
		<Footer />
	</body>
</html>
